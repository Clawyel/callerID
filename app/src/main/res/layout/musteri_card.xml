<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    card_view:cardCornerRadius="4dp"
    android:id="@+id/card_view"
    android:layout_margin="10dp"
    android:layout_height="wrap_content">

    <LinearLayout
        android:id="@+id/parent"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:gravity="center"

        android:orientation="vertical">

        <TextView
            android:id="@+id/adSoyad"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textColor="#FFF"
            android:textSize="25sp" />

        <TextView
            android:id="@+id/telefon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textColor="#FFF"
            android:textSize="25sp" />
        <TextView
            android:id="@+id/adres"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textColor="#FFF"
            android:textSize="25sp" />
        <TextView
            android:id="@+id/aracGonderimSayisi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textColor="#FFF"
            android:textSize="25sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">


            <TextView
                android:id="@+id/bakiye"
                android:layout_width="169dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text=""
                android:textColor="#FFF"
                android:textSize="25sp" />


            <Button
                android:id="@+id/bakiyedegistir"
                android:layout_width="33dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textColor="#FFF"
                android:text="Değiştir" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center"
            android:gravity="center">

            <ImageButton
                android:id="@+id/btnDuzenle"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/duzenle"
                android:background="@null"/>

            <ImageButton
                android:id="@+id/btnSil"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/sil"
                android:background="@null" />

            <ImageButton
                android:id="@+id/btnMusteriyiAra"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/call"
                android:background="#FFFFFF" />
        </LinearLayout>

    </LinearLayout>
</android.support.v7.widget.CardView>